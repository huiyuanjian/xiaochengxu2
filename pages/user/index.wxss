.user-page {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.user-header {
  padding: 48rpx 32rpx 24rpx;
  background: linear-gradient(180deg, #303645 0%, #3c4354 60%, #f5f5f5 100%);
}

.user-header-main {
  background-color: transparent;
}

.user-info-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: #d8d8d8;
}

.user-name-block {
  flex: 1;
  margin-left: 24rpx;
}

.user-nickname {
  display: block;
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 600;
}

.user-id {
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.user-intro {
  display: block;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.user-camera-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 28rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
}

.user-camera-icon {
  width: 32rpx;
  height: 24rpx;
  border-radius: 4rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.9);
  position: relative;
}

.user-camera-icon::before {
  content: '';
  position: absolute;
  top: -8rpx;
  left: 8rpx;
  width: 16rpx;
  height: 8rpx;
  border-radius: 4rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.9);
}

.user-camera-icon::after {
  content: '';
  position: absolute;
  top: 6rpx;
  left: 10rpx;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.9);
}

.user-stats-row {
  margin-top: 32rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-right: 72rpx;
}

.user-stat-item {
  flex: 1;
  align-items: center;
  text-align: center;
}

.user-stat-value {
  display: block;
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 600;
}

.user-stat-label {
  display: block;
  margin-top: 6rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

.user-body {
  flex: 1;
  background-color: #f5f5f5;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  margin-top: -16rpx;
  padding-top: 16rpx;
}

.user-tab-bar {
  height: 88rpx;
  padding: 0 96rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: #ffffff;
}

.user-tab-item {
  flex: 1;
  align-items: center;
  text-align: center;
}

.user-tab-text {
  font-size: 28rpx;
  color: #666666;
}

.user-tab-item-active .user-tab-text {
  color: #ff2442;
  font-weight: 600;
}

.user-tab-underline {
  margin: 8rpx auto 0;
  width: 56rpx;
  height: 4rpx;
  border-radius: 2rpx;
  background-color: #ff2442;
}

.user-scroll {
  flex: 1;
  height: calc(100vh - 360rpx);
  background-color: #f5f5f5;
}

.user-card-list {
  padding: 24rpx 32rpx;
}

.user-card {
  border-radius: 24rpx;
  background-color: #ffffff;
  overflow: hidden;
}

.user-card-cover {
  width: 100%;
  height: 360rpx;
  background-color: #d8d8d8;
}

.user-card-content {
  padding: 16rpx 20rpx 20rpx;
}

.user-card-title {
  display: block;
  font-size: 26rpx;
  color: #333333;
  line-height: 1.5;
}

.user-card-meta {
  margin-top: 12rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 22rpx;
  color: #999999;
}

.user-card-author {
  max-width: 180rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.user-card-tag {
  margin-left: 16rpx;
}

.user-card-like {
  margin-left: auto;
  color: #ff2442;
}

.user-empty-wrapper {
  padding-top: 120rpx;
  align-items: center;
  text-align: center;
}

.user-empty-text {
  font-size: 26rpx;
  color: #999999;
}

